#!/bin/bash
#PBS -l nodes=4:K20m
#PBS -l walltime=4:15:00
#PBS -A casa
#PBS -q gpu
#PBS -N bem
 
# cd to the directory where the  job was submitted
PBS_O_WORKDIR=/u/home/isurunh/simulations/GHOST
cd $PBS_O_WORKDIR
rm bem*
rm out.txt 
# Set up the environment

##source /u/home/isaki/S/env.sh
export PATH=/usr/local/cuda-8.0/bin:/dist/gcc-4.6.3/bin:/usr/mpi/gcc/openmpi-1.8.8/bin:/usr/local/bin:/bin:/usr/bin:$PATH
export LD_LIBRARY_PATH=/usr/local/cuda-8.0/lib64:/dist/gcc-4.6.3/lib64:/usr/mpi/gcc/openmpi-1.8.8/lib:$LD_LIBRARY_PATH

#Pick the executable
EXECUTABLE=/u/home/isurunh/simulations/GHOST/app
mpirun -npernode 4 $EXECUTABLE -hostfile $PBS_NODEFILE MV2_ENABLE_AFFINITY=0 > 50B-2GPUS.txt
